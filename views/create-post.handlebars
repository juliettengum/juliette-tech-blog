<section>
  <div class="card mb-6">
    <header class="card-header card-header-title post-info">

      <div class="column">
        <p class=" has-text-primary-light"></p>
        <p class="default-text  is-capitalized is-pulled-left">Create New Post</p>
      </div>

    </header>

    <div class="card-content">
      <div class="content has-text-justified">
        <form class="new-post-form">
          <div>
            <label for="post-title">Title</label>
            <input class="input" type="text" id="post-title" name="post-title" placeholder="insert blog title here" />
          </div>
          <div>
            <label for="post-content">Content</label>
            <textarea class="textarea is-large" id="post-content" name="post-content"
              placeholder="insert blog content here"></textarea>
          </div>
          <div>
            <button type="submit" class="text-white button gray-button input">Create</button>
          </div>
        </form>
      </div>

    </div>
  </div>

</section>

