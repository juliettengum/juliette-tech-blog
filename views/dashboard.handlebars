<div class="mb-5 pt-3">
    {{#if posts.length}}
</div>

{{#each posts as |post|}}

<div>
    <header class="card-header card-header-title owner-post">

        <a href="/dashboard/edit/{{post.id}}" class="is-pulled-left text-white" title="Edit post">{{post.title}}</a>

        <div class="is-pulled-right text-white small">
            {{format_date created_at}}
        </div>

    </header>
</div>

{{!-- </div> --}}

{{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">no posts yet</h6>

{{/if}}