            <h1 class="px-3 py-3 has-text-weight-bold tech-blog-text shadow" id="rcorners1">Your Dashboard</h1>
            {{else}}
            <h1 class="px-3 py-3 has-text-weight-bold tech-blog-text shadow" id="rcorners1">The Tech Blog</h1>
            {{/if}}
          </div>
          <div class="flex-item-right"></div>
          <div class="flex-item-right"></div>
          <div class="flex-item-right"></div>
        </div>
