    <main>
            {{{ body }}}
    </main>

    <footer>
        <div class="row-is-full content has-text-centered">
                  <p>
                  {{#if loggedIn}}  
                  <a href="/dashboard/create/" class="button new-post">+ New Post</a>
                  {{else}}
                  {{/if}}
                  </p>
              </div>
            <div class="row-is-full content has-text-centered">
        </div>
    </footer>
